<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

     <TextView
         android:id="@+id/tv1"
         android:layout_width="250dp"
         android:layout_height="40dp"
         android:background="#CFCFCF"
         android:text="@string/hello_world"
     />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A4D3EE"
        android:text="1" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B3EE3A"
        android:text="2" />
      <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CAE1FF"
        android:text="3" />
    <Button
        android:id="@+id/buttonjia"
        android:layout_width="wrap_content"
        android:background="#BFEFFF"
        android:layout_height="wrap_content"
      
        android:text="+" />
   </LinearLayout>
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/button4"
        android:background="#AB82FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4" />
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:text="5" />
      <Button
        android:id="@+id/button6"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" />
    <Button
        android:id="@+id/buttonjian"
        android:background="#B4EEB4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-" />
   </LinearLayout>
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/button7"
        android:background="#B3EE3A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7" />
    <Button
        android:id="@+id/button8"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8" />
      <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9" />
    <Button
        android:id="@+id/buttoncheng"
        android:background="#FFB90F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*" />
   </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A2B5CD"
        android:text="0" />

    <Button
        android:id="@+id/buttondeng"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="="></Button>

    <Button
        android:id="@+id/buttonchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AB82FF"
        android:text="/" />

   </LinearLayout>
   
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

    <Button
        android:id="@+id/buttonqingchu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CD96CD"
        android:text="清除" />

    <Button
        android:id="@+id/buttonkuo1"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:background="#97FFFF"
        android:text="("/>

    <Button
        android:id="@+id/buttonkuo2"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:background="#90EE90"
        android:text=")" />

   </LinearLayout>
</LinearLayout>